<Page x:Class="AnimeJail.App.Pages.JailMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AnimeJail.App.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="JailMenuPage">

    <Page.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource AuthButton}"/>
    </Page.Resources>
    <Grid>
        <StackPanel Style="{StaticResource MenuPanel}">
            <Button Content="Камеры" Click="JailButtonClick"/>
            <Button Content="Койки" Click="BerthButtonClick"/>
        </StackPanel>
    </Grid>
</Page>
